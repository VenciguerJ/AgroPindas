@{
    ViewData["Title"] = "Fornecedores";
}
@model IEnumerable<Fornecedor>

<h1>@ViewData["Title"]</h1>
    
<br />

<nav class="navbar navbar-light bg-light d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-success">Novo Fornecedor</a>
    <form class="form-inline d-flex" asp-action="Index">
        <input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Pesquise o produto">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</nav>

<hr />
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark" style="color: #18b955">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CNPJ)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.RazaoSocial)
            </th>
            <th colspan="2">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var fornecedor in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => fornecedor.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => fornecedor.CNPJ)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => fornecedor.RazaoSocial)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@fornecedor.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@fornecedor.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>