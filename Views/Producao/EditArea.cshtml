@model agropindas.Models.ProducaoViewModel
@{
    ViewData["Title"] = "Gerenciamento de Produção";
}

<div class="container mt-5">
    <h1 class="text-center mb-4">Gerenciamento de Produção</h1>

    <!-- Seção Suporte Calha -->
    <div class="card mb-4 shadow-sm">
        <div class="card-header bg-primary text-white">
            <h3>Detalhes do Suporte Calha</h3>
        </div>
        <div class="card-body">
            <form asp-action="Save" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label asp-for="SuporteProducao.CapacidadeMudas" class="form-label">Capacidade de Mudas</label>
                            <input asp-for="SuporteProducao.CapacidadeMudas" class="form-control" type="number" placeholder="Capacidade de Mudas" />
                            <span asp-validation-for="SuporteProducao.CapacidadeMudas" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group mb-3">
                            <label class="form-label">Ocupada</label>
                            <div class="form-check">
                                <input asp-for="SuporteProducao.ocupada" class="form-check-input" type="radio" value="true" id="ocupada-true" />
                                <label for="ocupada-true" class="form-check-label">Sim</label>
                            </div>
                            <div class="form-check">
                                <input asp-for="SuporteProducao.ocupada" class="form-check-input" type="radio" value="false" id="ocupada-false" />
                                <label for="ocupada-false" class="form-check-label">Não</label>
                            </div>
                            <span asp-validation-for="SuporteProducao.ocupada" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>

    @if(Model.ProducaoCalha == null)
    {
        <!--Botão para abrir form de produção-->
        <div class="text-center">
            <button class="btn btn-primary mb-4" onclick="toggleForm()">Iniciar Produção</button>
        </div>

        <!-- Seção Produção -->
        <div id="productionForm" style="display: none;">
            <div class="card-header bg-secondary text-white">
                <h3>Detalhes da Produção</h3>
            </div>
            <form asp-action="CreateProduction" method="post">
                <div class="card mb-4">
                    <div class="card-body">
                        <div class="form-group mb-3">
                            <label for="js-recupera-Lote">Produto a ser cultivado</label>
                            <select id="js-recupera-Lote" class="form-control" onchange="buscarLotes()">
                                <option value="0">Selecione...</option>
                                @foreach (var p in Model.produtosView)
                                {
                                    <option value="@p.Id">@p.Nome</option>
                                }
                            </select>
                        </div>

                        <div class="form-group mb-3">
                            <label for="IdLoteUsado">Lote Utilizado</label>
                            <select id="IdLoteUsado" class="form-control" asp-for="ProducaoCalha.IdLoteUsado">
                                <option value="">Selecione um lote...</option>
                                <!-- Opções serão preenchidas dinamicamente -->
                            </select>
                            <span asp-validation-for="ProducaoCalha.IdLoteUsado" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label for="QuantidadeProduzido">Quantidade que será produzida</label>
                            <input type="number" id="QuantidadeProduzido" class="form-control" asp-for="ProducaoCalha.QuantidadeProduzido" placeholder="Informe a quantidade produzida">
                            <span asp-validation-for="ProducaoCalha.QuantidadeProduzido" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="ProducaoCalha.IdCalha" value="@Model.SuporteProducao.Id" />
                    </div>
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success">Salvar Produção</button>
                </div>
            </form>
        </div>

        <!-- Botão de Submissão -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">Salvar Produção</button>
        </div>
    }
</div>
    

<script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
@section Scripts {
    <script>

        function buscarLotes() {
            var produtoId = document.getElementById("js-recupera-Lote").value;

            // Limpa as opções atuais de lote
            var loteSelect = document.getElementById("IdLoteUsado");
            //loteSelect.innerHTML = '<option value="">Selecione um lote...</option>';

            // Verifica se um produto válido foi selecionado
            if (produtoId !== "0") {
                // Faz a requisição AJAX para obter os lotes
                fetch(`/Estoque/GetLotesByProduto?produtoId=${produtoId}`)
                    .then(response => response.json())
                    .then(lotes => {
                        // Popula o campo de lotes com os dados retornados
                        lotes.forEach(lote => {
                            var option = document.createElement("option");
                            option.value = lote.Id;
                            option.text = lote.Nome;
                            loteSelect.add(option);
                        });
                    })
                    .catch(error => console.error('Erro ao buscar lotes:', error));
            }
        }

        function toggleForm() {
            const form = document.getElementById('productionForm');
            form.style.display = form.style.display === 'none' ? 'block' : 'none';
        }

    </script>
}
