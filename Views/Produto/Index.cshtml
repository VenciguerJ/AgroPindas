@{
    ViewData["Title"] = "Produtos";
}
@model IEnumerable<Produto>

<h1>@ViewData["Title"]</h1>
    
<br />

<nav class="navbar navbar-light bg-light d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-success">Novo Produto</a>
    <form class="form-inline d-flex">
        <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</nav>

<hr />
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark" style="color: #18b955">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoProduto)
            </th> 
            <th>
                @Html.DisplayNameFor(model => model.UnidadeCadastro)
            </th>
            <th colspan="2">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var produto in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => produto.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produto.TipoProduto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => produto.UnidadeCadastro)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@produto.Id" class="btn btn-warning"><i class="fa-solid fa-pen-to-square"></i></a>
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@produto.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>