@{
    ViewData["Title"] = "Cleintes";
}

@model IEnumerable<Cliente>

<h1>@ViewData["Title"]</h1>
    
<br/>

<nav class="navbar navbar-light bg-light d-flex justify-content-between">
    <a asp-action="Create" class="btn btn-success">Novo Fornecedor</a>
    <form class="form-inline d-flex" asp-action="Index" method="get">
        <input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Pesquise o produto">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</nav>

<hr />
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark" style="color: #18b955">
        <tr>
            <th>
                Codigo
            </th>
            <th>
                Nome
            </th> 
            <th>
                CPF
            </th>
            <th>
                e-mail
            </th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var c in Model)
        {
            <tr>
                <td>
                    @c.Id
                </td>
                <td>
                    @c.Nome
                </td>
                <td>
                    @c.CPF
                </td>
                <td>
                    @c.Email
                </td>
                <td>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                </td>
            </tr>
        }
    </tbody>
</table>