@{
    ViewData["Title"] = "Lotes";
}
@model IEnumerable<LoteMuda>

<h1>Lotes de mudas prontas</h1>

<br />

<nav class="navbar navbar-light bg-light d-flex justify-content-between">
    <form class="form-inline d-flex" asp-action="Index">
        <input class="form-control mr-sm-2" type="search" name="searchString" placeholder="Pesquise o produto">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit"><i class="fa-solid fa-magnifying-glass"></i></button>
    </form>
</nav>

<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark" style="color: #18b955">
        <tr>
            <th>
                Numero do Lote
            </th>
            <th>
                Produto
            </th>
            <th>
                Quantidade do Lote
            </th>
            <th>
                Quantidade de saídas
            </th>
            <th colspan="2">Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var lote in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => lote.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => lote.ProdutoMuda.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => lote.QuantidadeInicial)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => lote.QuantidadeVendido)
                </td>
                <td>
                    <a asp-action="DeleteLotePronto" asp-route-id="@lote.Id" class="btn btn-danger">
                        <i class="fa-solid fa-trash"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>