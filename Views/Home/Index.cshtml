@{
    Layout = "~/Views/Shared/_layoutLogin.cshtml";
    ViewData["Title"] = "Login";
}
@model Funcionario

<div class="container py-5 h-100 position-absolute top-50 start-50 translate-middle">
    <div class="row d-flex justify-content-center align-items-center h-100">
        <div class="col col-xl-10">
            <div class="card" style="border-radius: 1rem;">
                <div class="row g-0">
                    <div class="col-md-6 col-lg-5 d-none d-md-block">
                        <img src="~/Content/Login-image.jpg" alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem; height: 100%;" />
                    </div>
                    <div class="col-md-6 col-lg-7 d-flex align-items-center">
                        <div class="card-body p-4 p-lg-5 text-black">

                            <form asp-action="Index" method="post">

                                <div class="d-flex align-items-center mb-3 pb-1">
                                    <i class="fa-solid fa-seedling" style="font-size: 5vh"></i>
                                    <span class="h1 fw-bold mb-0"> AgroPindas</span>
                                </div>

                                <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Entre com suas credenciais</h5>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="Email">Email</label>
                                    <input type="email" class="form-control form-control-lg" asp-for="Email"/>
                                </div>

                                <div data-mdb-input-init class="form-outline mb-4">
                                    <label class="form-label" for="Senha">Senha</label>
                                    <input type="password" class="form-control form-control-lg" asp-for="Senha"/>
                                </div>

                                <div class="pt-1 mb-4">
                                    <input type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" value="Login">
                                </div>

                                <a class="small text-muted" href="#!">Esqueceu sua Senha?</a> <!-- Terminar isso aqui depois-->
                                <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                    Não tem uma conta? <a style="color: #393f81;" asp-controller="Home" asp-action="Register">Se registrar</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                                </p>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}