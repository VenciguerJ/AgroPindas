@{
    ViewData["Title"] = "Produtos";
}
@model PedidoView

<h1>@ViewData["Title"]</h1>
    
<br/>

<hr />
<table class="table table-striped table-bordered table-hover">
    <thead class="thead-dark" style="color: #18b955">
        <tr>
            <th>
                id
            </th>
            <th>
                Cliente
            </th>
            <th>
                Produtos
            </th> 
            <th>
                Data do pedido
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var pedido in Model.Pedido)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => pedido.Id)
                </td>
                <td>
                    @foreach(var c in Model.Clientes)
                    {
                        if (c.CPF == pedido.CPF)
                        {
                            @c.CPF
                        }
                    }
                </td>
                <td>
                    @pedido.Produtos
                </td>
                <td>
                    @pedido.DataPedido
                </td>
            </tr>
        }
    </tbody>
</table>